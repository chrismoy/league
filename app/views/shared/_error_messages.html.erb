<% if @user.errors.any? %>
  <div id="error-explanation">
    <div data-alert class="alert-box alert radius">
      The form contains <%= pluralize(@user.errors.count, "error") %>
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
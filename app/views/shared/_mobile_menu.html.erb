<nav class="tab-bar hide-for-large-up" id="mobile-top-bar">
  <section class="left-small">
    <a class="left-off-canvas-toggle menu-icon" href="#"><span></span></a>
  </section>

  <section class="right tab-bar-section">
    <%= link_to root_path do %>
      <%= image_tag 'scoreboard-text200.png', alt: "Got Next logo", class: "logo-image" %>
    <% end %>
  </section>
</nav>

<aside class="left-off-canvas-menu">
  <ul class="off-canvas-list">
    <% if logged_in? %>
    <li>
      <label>
        <div class="row profile">
          <%= link_to current_user do %>
            <div class="small-6 columns">
                <%= image_tag( "brianScalabrine.jpeg",
                                alt: "Profile Picture",
                                class: "profile-pic") %>
            </div>
            <div class="small-6 columns">
              <h5 class="profile-name"><%= current_user.name.split[0] %></h5>
            </div>
          <% end %>
        </div>
      </label>
    </li>
    <% end %>
    <li><%= link_to "Log In",  login_path %></li>
    <li><%= link_to "Help",  contact_path %></li>
    <% if logged_in? %>
      <li id="logout-btn"><%= link_to "Log Out", logout_path, method: "delete" %></li>
    <% else %>
      <li id="login-btn"><%= link_to "Log in", login_path %></li>
    <% end %>
  </ul>
</aside>

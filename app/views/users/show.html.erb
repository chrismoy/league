<% provide(:title, @user.name) %>
<div class="row">
  <aside class="medium-4 columns">
    <section class="user-info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>

  <main class="medium-8 columns">
    <% if @user.games.any? %>
      <h3>Games (<%= @user.games.count %>)</h3>
      <ol class="games">
        <%= render @games %>
      </ol>
      <%= will_paginate @games %>
    <% end %>
  </main>
</div>

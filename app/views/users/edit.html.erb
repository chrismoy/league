<% provide(:title, "Edit Info") %>
<main id="edit-user-content" class="content">

  <div class="edit-row">
    <h1 class="prompt edit-element">Edit Your Information</h1>
  </div>

  <div class="edit-row">
    <%= form_for current_user, html: { class: "edit-form" } do |f| %>
      <%= render 'fields', f: f %>
      <%= f.submit "Create my account", class: "button expand", id: "edit-button" %>
    <% end %>
  </div>
</main>

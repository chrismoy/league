<% provide(:title, "Sign Up") %>
<h1>Sign Up</h1>

<div class="row">
  <div class="small-12 columns">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create my account", class: "button expand" %>
    <% end %>
  </div>
</div>
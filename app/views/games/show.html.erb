<main id="game-content" class="content">
  <section class="game-info">
    <div class="away">
      <h4 class="team-name">AWAY</h4>
      <ul id="away-players">
      <% @away_players.each do |player| %>
        <%= render partial: "games/player", locals: { player: player, away: true } %>
      <% end %>
      </ul>
    </div>
    <div class="versus">
        Game Time:
        <span><%= @game.time.strftime("%-I:%M%p") %></span>
    </div>
    <div class="home">
      <h4 class="team-name">HOME</h4>
      <ul id="home-players">
      <% @home_players.each do |player| %>
        <%= render partial: "games/player", locals: { player: player, away: false } %>
      <% end %>
      </ul>
    </div>
  </section>
  <div class="address">
    <h4><span class="time"><%= @game.time.strftime("%-I:%M%p") %>, </span><%= @park.name %></h4>
    <h5><%= @park.address %></h5>
  </div>
  <section class="chat">
    <div class="board-container">
      <ul id="chat-board">
        <% @messages.each do |message| %>
          <%= render partial: "games/message", locals: { message: message } %>
        <% end %>
      </ul>
    </div>
    <%= form_for Message.new, remote: true do |f| %>
      <%= f.hidden_field :game_id, value: params[:id] %>
      <%= f.text_field :content, placeholder: "Discuss your game here" %>
    <% end %>

    <%= subscribe_to "/messages/new" %>

  </section>
</div>

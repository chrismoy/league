<li class="message">
  <div class="user-picture">
    <%= image_tag current_user.image_or_placeholder, alt: "User Picture"%>
  </div>
  <div class="content">
    <span class="name"><%= message.user.name.split(" ")[0] %></span>
    <span class="time"><%= time_ago_in_words(message.created_at) %></span>
    <p><%= message.content %></p>
  </div>
</li>

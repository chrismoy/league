<li>
  <div class="distance">
    <span>&nbsp</span>
    <span><%= sprintf("%.1f", park.distance_from([@latitude, @longitude])) %> mi</span>
  </div>
  <div class="icon icon_user"><h3 class="title">You</h3></div>
  <input type="radio" name="mapline-group" style="top: <%= @icon_offset %>rem" <%= "checked" if @icon_offset < 41.5 %>/>
  <label class="icon" style="top: <%= @icon_offset %>rem"></label>
  <% @icon_offset += 41.5 %>
  <div class="park-label" style="background-image: url(/assets/<%= park.name.camelize(:lower).gsub(' ', '') %>.jpg);">
    <div class="image-filter"></div>
    <h2><%= park.name %></h2>
    <!-- <button class="new-game"><%= icon('plus', '', class: "fa-4x") %></button> -->
    <ol class="active-games">
      <li class="game">
        <p class="time"></p>
        <p class="roster"></p>
      </li>
    </ol>
  </div>
</li>

<li>

  <div class="distance">
    <span>&nbsp</span>
    <span><%= sprintf("%.1f", park.distance_from([@latitude, @longitude])) %> mi</span>
  </div>

  <input type="radio" name="mapline-group" style="top: <%= @icon_offset %>rem" id="park_label_<%= park.id %>" <%= "checked" if @icon_offset < 41.5 %>/>
  <label class="icon" style="top: <%= @icon_offset %>rem"></label>
  <% @icon_offset += 26.5 %>

  <label class="park-label" style="background-image: url(/assets/<%= park.name.camelize(:lower).gsub(' ', '') %>.jpg);" for="park_label_<%= park.id %>">
    <div class="image-filter"></div>
    <h2 class="park-name"><%= park.name.upcase %></h2>
    <div class="new-game">
      <%= icon('plus') %>
      <span>New Game</span>
    </div>
    <ol class="active-games">
      <% @r = rand(7) %>
      <% (1..@r).each do %>
        <li class="game">
          <p class="time"><%= rand(12) %>:00p</p>
          <p class="roster"><%= rand(6) %>/6 Players</p>
        </li>
      <% end %>
    </ol>
    <div class="select-filter"></div>
  </label>

</li>

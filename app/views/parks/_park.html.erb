<li>
  <div class="distance">
    <span>&nbsp</span>
    <span><%= sprintf("%.1f", park.distance_from([@latitude, @longitude])) %> mi</span>
  </div>

  <input type="radio" name="mapline-group" style="top: <%= @icon_offset %>rem" id="park_label_<%= park.id %>" <%= "checked" if @icon_offset < 41.5 %>/>
  <label class="icon" style="top: <%= @icon_offset %>rem"></label>
  <% @icon_offset += 26.5 %>

  <label class="park-label" style="background-image: url(/assets/<%= park.name.camelize(:lower).gsub(' ', '') %>.jpg);" for="park_label_<%= park.id %>" data-parkid="<%= park.id %>">
    <div class="image-filter"></div>
    <h2 class="park-name"><%= park.name.upcase %><span> (<%= sprintf("%.1f", park.distance_from([@latitude, @longitude])) %> mi)</span></h2>
    <p class="game-select-intro">Click any time below to check out a game</p>
    <div class="active-games-container">
      <div class="guide-shell">
        <%= render partial: 'parks/temp_active_games', locals: { park: park } %>
      </div>
      <div class="guide-box">
        <div class="time">Game Time</div>
        <div class="roster">Player Count</div>
      </div>
      <div class="shade left"></div>
      <div class="shade right"></div>
    </div>
    <div class="select-filter"></div>
  </label>
</li>

<main id="login-content" class="content">

  <div class="login-row">
    <h2 class="prompt"><span>Log In</span></h2>
  </div>

  <div class="login-row">
    <h3 class="signin-instructions"><span>Sign in with your favorite social media!</span></h3>
  </div>

  <div class="login-row">
    <div class="social-row">
      <div class="social-button-div">
        <%= link_to '/auth/facebook', class: "button expand facebook" do %>
          <span>Facebook</span><%= icon('facebook') %>
        <% end %>
      </div>
      <div class="social-button-div">
        <%= link_to '/auth/twitter', class: "button expand twitter" do %>
          <span>Twitter</span><%= icon('twitter') %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="login-row">
    <h3 class="signin-instructions"><span>Or use standard email</span></h3>
  </div>

  <div class="login-row">
    <%= form_for :session, url: login_path,
                           html: { class: "login-form" } do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= link_to "(forgot password)", new_password_reset_path %>
      <%= f.password_field :password %>

      <%= f.label :remember_me do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>

      <%= f.submit "Log In", class: "button expand" %>
    <% end %>

    <p class="new-user">New User? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</main>

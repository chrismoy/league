<main id="login-content" class="content">

  <div class="login-row">
    <h1 class="prompt login-element">Log In</h1>
  </div>

  <div class="login-row">
    <%= form_for :session, url: login_path,
                           html: { class: "login-form" } do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= link_to "(forgot password)", new_password_reset_path %>
      <%= f.password_field :password %>

      <%= f.label :remember_me do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>

      <%= f.submit "Log In", class: "button expand" %>
    <% end %>

    <p class="new-user">New User? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</main>

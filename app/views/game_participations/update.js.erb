$self = $("<%= j(render '/games/player', { player: current_user }) %>");
$button = $("<%= j(render '/shared/buttons/leave_game_button') %>");

if( $('#home-players li').length < 3 || $('#away-players li').length < 3 ) {
  if($('#home-players li').length >= $('#away-players li').length) {
    $self.appendTo('#away-players').hide().slideDown(200);
  }
  else {
    $self.appendTo('#home-players').hide().slideDown(200);
  }

  $('.btn-join').remove();
  $('#join-leave').append($button);
}

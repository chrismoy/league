$self = $("<%= j(render '/games/player', { player: current_user }) %>");
$button = $("<%= j(render '/shared/buttons/leave_game_button') %>");

<% if @game.users.count == 1 %>
  $('#empty-panel').remove();
<% end %>

if( $('#home-players li').length % 2 == 0 ) { $self.appendTo('#home-players').hide().slideDown(200); }
else { $self.appendTo('#away-players').hide().slideDown(200); }

$('#main-button').remove();
$button.appendTo('#join-leave-div');

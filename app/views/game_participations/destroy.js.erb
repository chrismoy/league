$self = $("#user_<%= current_user.id %>");
$empty = $("<%= j(render '/games/empty_panel') %>");
$button = $("<%= j(render '/shared/buttons/join_game_button') %>");

$self.slideUp(200, function() {
  $self.remove();
});

$empty.appendTo('.player-grid').hide().slideDown(200);

$('#main-button').remove();
$button.appendTo('#join-leave-div');

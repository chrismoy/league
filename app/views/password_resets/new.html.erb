<% provide(:title, "Forgot password") %>
<h1>Forgot password</h1>

<div class="row">
  <div class="12-small columns">
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.submit "Submit", class: "button radius" %>
    <% end %>
  </div>
</div>
